<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/styles/stars.css">

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">


                <div class="card-body">
                    <h2 class="card-title">
                        <%= post.title %>
                    </h2>
                    <p class="card-text">

                        <%= post.note%>

                    </p>

                </div>
                <% if(currentUser && post.author.equals(currentUser._id)) {%>
                    <div class="card-body">
                        <a href="/posts/<%= post.id %>/edit " class="card-link btn btn-info">Edit</a>

                        <form class="d-inline" action="/posts/<%= post.id %>?_method=DELETE " method="POST">
                            <button class="card-link btn btn-danger"> Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
            <div class="mt-5">
                <p>
                    Display: <strong>
                        <%= post.views.toUpperCase() %>
                    </strong>
                </p>
                <p>
                    Created By: <strong>
                        <%= post.author.username.toUpperCase() %>
                    </strong>
                </p>
            </div>
        </div>


        <div class="col-6">
            <% if(currentUser) { %>
                <form action="/posts/<%= post._id %>/reviews " method="POST" class="mb-3 validated-form"
                    novalidate>
                    <div>
                        <!-- <label class="form-label" for="rating">Rating</label> -->
                        <fieldset class="starability-basic">
                            <!-- <legend>First rating:</legend> -->
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div>
                        <h2>Leave a Review</h2>

                        <div class="mb-3">
                            <label class="form-label" for="reviewbody">Review Text</label>
                            <textarea class="form-control" name="review[body]" id="review" cols="3" rows="3"
                                required></textarea>
                        </div>
                        <button class="btn btn-success">Submit</button>

                    </div>
                </form>
                <% } %>

                    <% for (let review of post.reviews){ %>
                        <div class="card mb-3">
                            <div class="card-body">

                                <p class="starability-result" data-rating=<%=review.rating %> >
                                    Rated: <%= review.rating %> stars </p>
                                <!-- <h6 class="card-subtitle mb-2 text-muted">
                            
                        </h6> -->

                                <p class="card-text">
                                    <%=review.body%>
                                </p>

                                <% if(currentUser && review.author.equals(currentUser._id)){%>
                                    <form
                                        action="/posts/<%= post.id %>/reviews/<%= review.id %>?_method=DELETE  "
                                        method="POST">

                                        <button class="btn btn-sm btn-danger">Delete</button>

                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>

    </div>

    </div>




    <script src="/javascripts/showPageMap.js"></script>