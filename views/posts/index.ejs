<% layout('layouts/boilerplate')%>

<div class="card">
  <img
    src="https://images.unsplash.com/photo-1528938102132-4a9276b8e320?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8bm90ZWJvb2t8ZW58MHx8MHx8&auto=format&fit=crop&w=1267&q=80"
    alt=""
    style="width: 100%; height: 500px"
  />
</div>
<h1>All Posts</h1>

<% for(let post of posts){ %> <% if(post.views==='public' ) {%>
<div class="card">
  <div class="col-md-8">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.note %></p>
      <a class="btn btn-primary" href="/posts/<%= post.id %> ">
        View <%=post.title %>
      </a>
    </div>
  </div>
</div>
<% } %> <% } %>
